<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.stash.python" name="Stash" version="2.0.0" provider-name="circero">
    <requires>
        <import addon="xbmc.metadata" version="2.1.0"/>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.metadata.scraper.movies" library="python/scraper.py">
        <summary lang="en_GB">Stash Movie Scraper</summary>
        <description lang="en_GB">Download movie information from your Stash instance</description>
        <disclaimer lang="en_GB">Requires a running Stash instance</disclaimer>
        <language fallback="en">en</language>
        <platform>all</platform>
        <thumb>icon.png</thumb>
    </extension>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <summary lang="en_GB">Stash Scraper</summary>
        <description lang="en_GB">Metadata scraper for Stash - supports movies, scenes, and performers</description>
        <disclaimer lang="en_GB">Requires a running Stash instance with API access</disclaimer>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website>https://stashapp.cc</website>
        <source>https://github.com/stashapp</source>
        <news>v2.0.0 - Enhanced error handling with retry logic, configurable timeouts, result caching, improved logging</news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.gif</fanart>
        </assets>
    </extension>
</addon>